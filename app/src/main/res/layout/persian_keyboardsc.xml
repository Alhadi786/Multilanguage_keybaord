            <Button
                android:id="@+id/prssp9"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="٪"
                android:text="٪" />
            <Button
                android:id="@+id/prsspx"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="&amp;"
                android:text="&amp;" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="10.5" >

            <Button
                android:id="@+id/prsspxx"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="*"
                android:text="*" />
            <Button
                android:id="@+id/prsspxxx"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="#"
                android:text="#" />
            <Button
                android:id="@+id/prssp15"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="$"
                android:text="$" />

            <Button
                android:id="@+id/prssp12"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="‹"
                android:text="‹" />

            <Button
                android:id="@+id/prssp13"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="›"
                android:text="›" />

            <Button
                android:id="@+id/prssp19"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="/"
                android:text="/" />

            <Button
                android:id="@+id/prssp16"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="؟"
                android:text="؟" />

            <Button
                android:id="@+id/prssp17"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="«"
                android:text="«" />

            <Button
                android:id="@+id/prssp18"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="»"
                android:text="»" />

            <Button
                android:id="@+id/prsBackSc"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dip"
                android:layout_weight="1.5"
                android:background="@drawable/back_clear"
                android:fitsSystemWindows="true"
                android:soundEffectsEnabled="true"
                android:tag="back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10" >

            <Button
                android:id="@+id/prsScToPrs"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:text="اب" />

            <Button
                android:id="@+id/prsLngSc"
