<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hebrwKeyboardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="center"
    android:layout_marginBottom="2dip"
    android:background="#a0a0a0"
    android:orientation="vertical"
    android:visibility="visible" >

    <!-- android:background="#A9ABAE" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="3dip"
        android:weightSum="4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:orientation="horizontal"
            android:weightSum="10" >

            <Button
                android:id="@+id/prsQ"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ق"
                android:text="ق" />

            <Button
                android:id="@+id/prsW"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="و"
                android:text="و" />

            <Button
                android:id="@+id/prsE"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ع"
                android:text="ع" />

            <Button
                android:id="@+id/prsR"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ر"
                android:text="ر" />

            <Button
                android:id="@+id/prsT"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ت"
                android:text="ت" />

            <Button
                android:id="@+id/prsYY"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ي"
                android:text="ي" />

            <Button
                android:id="@+id/prsha"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ء"
                android:text="ء" />

            <Button
                android:id="@+id/prsY"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ی"
                android:text="ی" />

            <Button
                android:id="@+id/prsH"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ه"
                android:text="ه" />

            <Button
                android:id="@+id/prsP"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="پ"
                android:text="پ" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:orientation="horizontal"
            android:weightSum="10" >

            <Button
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/prs1A"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ا"
                android:text="ا" />

            <Button
                android:id="@+id/prs1S"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="س"
                android:text="س" />

            <Button
                android:id="@+id/prs1D"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="د"
                android:text="د" />

            <Button
                android:id="@+id/prs1F"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ف"
                android:text="ف" />

            <Button
                android:id="@+id/prs1G"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="گ"
                android:text="گ" />

            <Button
                android:id="@+id/prs1H"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ھ"
                android:text="ھ" />

            <Button
                android:id="@+id/prs1J"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ج"
                android:text="ج" />

            <Button
                android:id="@+id/prs1K"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ک"
                android:text="ک" />

            <Button
                android:id="@+id/prs1L"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ل"
                android:text="ل" />

            <Button
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="10" >

            <Button
                android:id="@+id/prsChange"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dip"
                android:layout_weight="1.5"
                android:background="@drawable/change_high"
                android:fitsSystemWindows="true"
                android:soundEffectsEnabled="true"
                android:tag="lower" />

            <Button
                android:id="@+id/prs2Z"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ز"
                android:text="ز" />

            <Button
                android:id="@+id/prs2SH"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ش"
                android:text="ش" />

            <Button
                android:id="@+id/prs2CH"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="چ"
                android:text="چ" />

            <Button
                android:id="@+id/prs2T"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ط"
                android:text="ط" />

            <Button
                android:id="@+id/prs2B"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ب"
                android:text="ب" />

            <Button
                android:id="@+id/prs2n"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ن"
                android:text="ن" />

            <Button
                android:id="@+id/prs2lm"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="م"
                android:text="م" />

            <Button
                android:id="@+id/prsBack"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dip"
                android:layout_weight="1.5"
                android:background="@drawable/back_clear"
                android:fitsSystemWindows="true"
                android:soundEffectsEnabled="true"
                android:tag="back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10" >

            <Button
                android:id="@+id/prsToPrsSc"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:text="۱۲۳" />

            <Button
                android:id="@+id/prsLng"
                style="@style/kbButtonStyle"
                android:layout_margin="2dip"
                android:layout_weight="1" />

            <Button
                android:id="@+id/prsSpace"
                style="@style/spaceStyle"
                android:layout_weight="5.5"
                android:tag=" "
                android:text=" " />

            <Button
                android:id="@+id/prscST"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="۔"
                android:text="۔" />

            <Button
                android:id="@+id/prsDone"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="1.5"
                android:background="@drawable/hide_high"
                android:fitsSystemWindows="true"
                android:soundEffectsEnabled="true"
                android:tag="\n" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>