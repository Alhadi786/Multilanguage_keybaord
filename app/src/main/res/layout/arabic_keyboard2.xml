<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hebrwKeyboardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="center"
    android:layout_marginBottom="2dip"
    android:background="#a0a0a0"
    android:orientation="vertical"
    android:visibility="visible" >

    <!-- android:background="#A9ABAE" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="3dip"
        android:weightSum="4" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:orientation="horizontal"
            android:weightSum="10" >

            <Button
                android:id="@+id/arbATT"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ؐ"
                android:text=" ؐ " />

            <Button
                android:id="@+id/arbDD"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ؤ"
                android:text="ؤ" />

            <Button
                android:id="@+id/arbAS"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ؑ"
                android:text=" ؑ " />

            <Button
                android:id="@+id/arbRE"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ّ"
                android:text=" ّ " />

            <Button
                android:id="@+id/arbTE"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ً"
                android:text=" ً" />

            <Button
                android:id="@+id/arbSN"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ٍ"
                android:text=" ٍ " />

            <Button
                android:id="@+id/arbUP"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ئ"
                android:text="ئ" />

            <Button
                android:id="@+id/arbSP"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ٰ"
                android:text=" ٰ" />

            <Button
                android:id="@+id/arbRB"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ة"
                android:text="ة" />

            <Button
                android:id="@+id/arbLB"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ُ"
                android:text=" ُ " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10" >

            <Button
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/arbDDT"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="إ"
                android:text="إ" />

            <Button
                android:id="@+id/arbSD"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="أ"
                android:text="أ" />

            <Button
                android:id="@+id/arbDL"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="."
                android:text="." />

            <Button
                android:id="@+id/arbCM"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ٖ"
                android:text="  ٖ" />

            <Button
                android:id="@+id/arbGH"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="غ"
                android:text="غ" />

           <Button
                android:id="@+id/arbHH"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="“"
                android:text="“" />

            <Button
                android:id="@+id/arbZD"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="”"
                android:text="”" />

            <Button
                android:id="@+id/arbKH"
                style="@style/btnStyle"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:tag="خ"
                android:text="خ" />

            <Button
                android:id="@+id/arbRH"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ؒ"
                android:text=" ؒ " />

            <Button
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="10" >

            <Button
                android:id="@+id/arbChange2"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dip"
                android:layout_weight="1.5"
                android:background="@drawable/change_high"
                android:fitsSystemWindows="true"
                android:soundEffectsEnabled="true"
                android:tag="lower" />

            <Button
                android:id="@+id/arbZAH"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ذ"
                android:text="ذ" />

             <Button
                android:id="@+id/arbXAH"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ِ"
                android:text=" ِ " />

            <Button
                android:id="@+id/arbSA"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="َ"
                android:text=" َ " />

            <Button
                android:id="@+id/arbZZ"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="ظ"
                android:text="ظ" />

            <Button
                android:id="@+id/arbRZ"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag=" ؓ"
                android:text="  ؓ " />

            <Button
                android:id="@+id/arbNGN"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="؟"
                android:text="؟" />

            <Button
                android:id="@+id/arbSNS"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="،"
                android:text="،" />

            <Button
                android:id="@+id/arbBack2"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dip"
                android:layout_weight="1.5"
                android:background="@drawable/back_clear"
                android:fitsSystemWindows="true"
                android:soundEffectsEnabled="true"
                android:tag="back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10" >

            <Button
                android:id="@+id/arb2ToArbSc"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:text="۱۲۳" />

            <Button
                android:id="@+id/arbLng2"
                style="@style/kbButtonStyle"
                android:layout_margin="2dip"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/arbSpace2"
                style="@style/spaceStyle"
                android:layout_weight="5.5"
                android:tag=" "
                android:text=" " />

            <Button
                android:id="@+id/arbST2"
                style="@style/btnStyle"
                android:layout_weight="1"
                android:tag="۔"
                android:text="۔" />

            <Button
                android:id="@+id/arbDone2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:layout_weight="1.5"
                android:background="@drawable/hide_high"
                android:fitsSystemWindows="true"
                android:soundEffectsEnabled="true"
                android:tag="\n" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>